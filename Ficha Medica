    <!-- Formulario de búsqueda -->
    <h2>Buscar Usuario por Apellido</h2>
    <form id="buscarUsuarioForm">
        <label for="buscarApellido">Apellido:</label>
        <input type="text" id="buscarApellido" name="buscarApellido" required>
        <button type="button" onclick="buscarUsuario()">Buscar</button>
    </form>

    <script>
        // Función para guardar la ficha médica
        function guardar() {
            // Aquí se debe verificar si el registro ya existe y preguntar si desea sobrescribir
            // Luego de la confirmación, guardar la información
            alert('Registro guardado correctamente.');
        }

        // Función para cerrar el formulario
        function cerrar() {
            window.close(); // Esta función cerrará la ventana
        }

        // Función para buscar un usuario por apellido
        function buscarUsuario() {
            const apellido = document.getElementById('buscarApellido').value;
            // Aquí se debe implementar la lógica para buscar el usuario en la base de datos
            alert('Resultados de la búsqueda para el apellido: ' + apellido);
        }
